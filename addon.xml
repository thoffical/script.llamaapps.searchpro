<addon id="script.idealkooks.searchpro" version="1.0.2" name="SearchPro" provider-name="idealkooks">
    <summary>Search through all your Kodi files and addons</summary>
    <description>Search all your Kodi setup including addons and files using SearchPro. Licensed under the Apache 2.0 License.</description>
    <platform>all</platform>
    <language>en</language>

    <!-- License -->
    <license>Apache 2.0</license>

    <!-- Main script entry -->
    <extension point="xbmc.python.script" library="resources/lib/default.py"/>

    <!-- Addon settings -->
    <extension point="xbmc.addon.settings">
        <settings file="resources/settings.xml"/>
    </extension>
    
    <icon>icon.png</icon>
</addon>
